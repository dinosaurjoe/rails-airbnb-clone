<div class="boat-container">
  <% image_path = @boat.photo %>
  <div class="boat-banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.45) 0%, rgba(0,36,61,0.45) 50%), url( <%= asset_path 'sailboat.jpg' %>);">
    <div class="banner-content">
      <h3><%= @boat.name %></h3>
      <p><%= @boat.city %></p>
    </div>
  </div>

  <div class="container boat-content">

  <div class="row">
    <div class="col-sm-12 col-md-8">
      <h2><%= @boat.name %></h2>
      <ul class="list-inline">
        <li><%= @boat.city %></li>
        <li><%= @boat.category %></li>
      </ul>
      <p><%= @boat.description %></p>
    </div>

    <div class="col-sm-12 col-md-3 col-md-offset-1 boat-table text-center">
      <div class="table-header">
        <h4>PRICE PER DAY: $<%= @boat.price %></h4>
      </div>
      <div class="table-content">
        <div class="table-light"><p><strong>check in</strong> 12/05/17</p></div>
        <div class="table-dark"><p><strong>check out</strong> 20/05/17</p></div>
        <div class="table-light"><p><strong>TOTAL</strong> $<%= @boat.price * 8 %></p></div>
        <p><%= link_to 'book now', new_boat_booking_path(@boat), class: 'btn btn-book' %></p>
      </div>
    </div>
  </div>
</div>
