<div class="container">
  <% if @boats.length == 0 %>
    <h2>No Search Results</h2>
  <% else %>
    <div class="fixed-map">
    <%= render 'map' %>
    </div>
    <div class="cards">
    <% @boats.in_groups_of(2, false).each do |group| %>
      <div class="row">
      <% group.each do |boat| %>
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
          <%= link_to boat_path(boat) do %>
          <% if boat.photo %>
          <%= cl_image_tag boat.photo %>
          <% else %>
          <%= image_tag "sailboat.jpg" %>
          <% end %>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= asset_path('sailboat.jpg') %>');">
            <h1><%= boat.name %></h1>
            <p><%= boat.category %></p>
            <p><%= boat.capacity %></p>
          </div>
          <% end %>

        </div>
      <% end %>
      </div>
      <% end %>
    <% end %>
    </div>

</div>
<br>
