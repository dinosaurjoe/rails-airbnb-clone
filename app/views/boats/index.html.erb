<div class="container">
  <% if @boats.length == 0 %>
    <h2>No Search Results</h2>
  <% else %>
    <% @boats.in_groups_of(3, false).each do |group| %>
      <div class="row">
      <% group.each do |boat| %>
        <div class="col-xs-12 col-sm-6 col-md-4">
          <%= link_to boat_path(boat) do %>
          <div class="card">
            <h1><%= boat.name %></h1>
            <p><%= boat.category %></p>
            <p><%= boat.capacity %></p>
          </div>
          <% end %>
        </div>
      <% end %>
      </div>
    <% end %>
  <% end %>
</div>
