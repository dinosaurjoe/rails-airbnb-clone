<div class="booking-container container">
  <div class="row">
    <div class="booking-main-row col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-8 col-lg-offset-2">


      <h1 class="text-center">Create Booking Request</h1>

      <hr>

      <div class="boat-info">
        <h2>The Boat:</h2>
        <div class="row is-flex">
          <div class="boat-image text-center col-xs-12 col-md-6 col-lg-6">
            <%= image_tag ("http://placehold.it/220x220") %>
          </div>

          <div class="boat-description col-xs-12 col-md-6 col-lg-6">
            <h2><%= @booking.boat.name %></h2>
            <ul class="list-inline">
              <li><%= @booking.boat.city %></li>
              <li><%= @booking.boat.category %></li>
            </ul>
            <p><%= @booking.boat.description %></p>
          </div>
        </div>
      </div>

      <hr>

      <div class="owner-info">
        <h2>Your Host:</h2>
        <div class="row is-flex">
          <div class="owner-image text-center col-xs-12 col-md-6 col-lg-6">
            <%= image_tag ("http://placehold.it/220x220") %>
          </div>

          <div class="owner-description col-xs-12 col-md-6 col-lg-6">
            <h2><%= @booking.boat.user.full_name %></h2>
            <p><%= @booking.boat.user.bio %></p>
          </div>
        </div>
      </div>

      <hr>

      <div class="dates-and-price">
        <div class="row">
          <div class="text-center col-xs-12 col-md-6 col-lg-6">
            <%= render 'form' %>
          </div>
          <h3>Price: <%= (7 * @booking.boat.price) %></h3>
        </div>
      </div>






    </div>
  </div>
</div>

